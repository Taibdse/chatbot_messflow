<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" id="bootstrap-css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/dist/css/AdminLTE.css">
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="/dist/css/user.css">
    <link rel="stylesheet" href="/dist/css/fbchatpopup.css">


    <title>Chatbot Message</title>
    <style>
        .btn-custom {
            padding-left: 25px;
            padding-right: 25px;
            border-radius: 5px;
        }

        table .showModalMsg {
            cursor: pointer;
        }

        #tblTagAndLastMsg tr td:last-child,
        #tblTagAndLastMsg tr td:nth-child(3),
        #tblTagAndLastMsg tr th:last-child,
        #tblTagAndLastMsg tr th:nth-child(3) {
            max-width: 300px !important;
        }

        #tblTagAndLastMsg {
            width: 95%;
            margin: auto;
        }
    </style>
</head>

<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">
        <% include ../../partials/header %>
            <% include ../../partials/menus %>
                <div class="content-wrapper">
                    <div class="container">
                        <div class="row" style="margin: 30px 0">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtSearchTagInputPage" placeholder="Filter name...">
                                <br>
                                <button class="btn btn-success btn-custom" id="btnTagEditPage">Tag</button>
                            </div>
                            <div class="col-sm-3"></div>
                        </div>
                        <div class="row">

                            <div class="col-12 mx-auto">

                                <table class="table table-striped table-hover table-condensed" id="tblTagAndLastMsg">
                                    <!-- content here -->
                                </table>
                            </div>

                        </div>
                    </div>

                    <!-- model input page-->
                    <div class="modal fade" id="tagModalInputPage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Message Information</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="">
                                        <label>Tag</label>
                                        <input type="text" class="form-control" id="txtNewTagName">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-info btn-custom" id="btnSaveTagInputPage">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>

    <!-- jQuery  -->
    <script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- bootstrap js -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <!-- custom js -->
    <script src="/dist/js/common.js"></script>
    <script src="/dist/js/pages/tagPages/input_tag.js"></script>
    <!-- sweetalert2 -->
    <script src="/plugins/alert/sweetalert2.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>

</html>